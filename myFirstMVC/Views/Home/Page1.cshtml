@using Configuration;
@using Models;
@using Services;
@using myFirstMVC.Models;
@model QuoteViewModel


@{
    ViewData["Title"] = "Page1";
}

<div class="container px-4 py-4" id="list-of-items">
    <h2 class="pb-2 border-bottom">List of Quotes</h2>

    <p>Below are some of the worlds most famous quotes.</p>
    <p>The database contains quotes matching the search criteria</p>

    <!-- Search filter-->
    <form method="get">
        <div class="row mb-1 text-center">
            <div class="col-md-6">
                <input class="form-control" type="search" placeholder="Search" name="SearchFilter">
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </div>
        </div>
    </form>
    <!-- Header row -->
    <div class="row mb-2 text-center">
        <input type="hidden" name="groupId" data-seido-selected-item-id-target />
        <div class="col-md-10 themed-grid-head-col">Quote</div>
        <div class="col-md-2 themed-grid-head-col">
            <a href="#add-edit-artist" class="btn btn-success btn-sm m-1">New</a>
        </div>
    </div>

    <!-- Quote rows -->
    @if (Model.Quotes != null)
    {
        @foreach (FamousQuote quote in Model.Quotes)
        {

            <div class="row mb-2 text-center">
                <div class="col-md-10 themed-grid-col">
                    <p>@quote.Quote</p>
                </div>
                <div class="col-md-2 themed-grid-col">
                    <a href="#edit-item" class="btn btn-secondary btn-sm m-1">Edit</a>
                    <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal" data-bs-target="#delModal"
                        data-seido-modal-body=" is about to be deleted.">
                        Del
                    </button>
                </div>
            </div>
        }
    }

    <!-- Pagination -->
    <nav aria-label="Standard pagination example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#list-of-items" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#list-of-items">1</a></li>
            <li class="page-item"><a class="page-link" href="#list-of-items">2</a></li>
            <li class="page-item"><a class="page-link" href="#list-of-items">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#list-of-items" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Modal utanfÃ¶r form -->
    <div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this quote?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-danger">Ok</button>
                </div>
            </div>
        </div>
    </div>
</div>